{
  "name": "Strivus",
  "short_name": "Strivus",
  "description": "Evolve your optimal workout with the power of genetic algorithms.",
  "start_url": "/",
  "id": "/",
  "display": "standalone",
  "background_color": "#0f172a",
  "theme_color": "#0f172a",
  "orientation": "portrait-primary",
  "scope": "/",
  "dir": "ltr",
  "lang": "en-US",
  "categories": ["health", "fitness", "lifestyle"],
  "iarc_rating_id": "YOUR_IARC_RATING_ID_HERE",
  "prefer_related_applications": true,
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.yourcompany.strivus",
      "id": "com.yourcompany.strivus"
    }
  ],
  "scope_extensions": [
    { "origin": "https://strivusai.com" }
  ],
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "icons": [
    {
      "src": "/icon-192.png",
      "type": "image/png",
      "sizes": "192x192",
      "purpose": "any"
    },
    {
      "src": "/icon-512.png",
      "type": "image/png",
      "sizes": "512x512",
      "purpose": "any"
    },
    {
      "src": "/icon-maskable-1024.png",
      "type": "image/png",
      "sizes": "1024x1024",
      "purpose": "maskable"
    },
    {
      "src": "/icon-maskable-512.png",
      "type": "image/png",
      "sizes": "512x512",
      "purpose": "maskable"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/screenshot-desktop.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Strivus Workout Generator"
    },
    {
      "src": "/screenshots/screenshot-mobile.png",
      "sizes": "750x1334",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Strivus Mobile Interface"
    }
  ],
  "share_target": {
    "action": "/share.html",
    "params": {
      "title": "name",
      "text": "description",
      "url": "link"
    }
  },
  "shortcuts": [
    {
      "name": "New Workout",
      "short_name": "New",
      "description": "Generate a new workout plan",
      "url": "/#generate-new",
      "icons": [{ "src": "/icon-192.png", "sizes": "192x192" }]
    }
  ]
}
